{
  "compilerOptions": {
    "baseUrl": ".",
    "strict": true,
    "target": "ES5",
    "module": "ES6",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "preserveConstEnums": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "declarationMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "lib": [
      "es2020"
    ],
    "noImplicitAny": true,
    "removeComments": true,
    "sourceMap": true,
  },
  "ts-node": {
    "compilerOptions": {
      "target": "esnext",
      "module": "commonjs"
    }
  },
  "exclude": [
    "node_modules"
  ],
  "files": [
    "./hardhat.config.ts"
  ],
  "include": [
    "src/**/*",
    "tasks/**/*",
    "test/**/*",
    "deploy/**/*",
    "types/"
  ]
}